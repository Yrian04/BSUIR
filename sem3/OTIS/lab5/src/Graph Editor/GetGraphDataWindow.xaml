<Window x:Class="Graph_Editor.GetGraphDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graph_Editor"
        xmlns:vm="clr-namespace:Graph_Editor.ViewModels"
        mc:Ignorable="d" Height="200" Width="300">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,0" 
            TextWrapping="Wrap" 
            Text="Enter name of the graph" 
            VerticalAlignment="Top"/>
        <TextBox 
            x:Name="tb" 
            Grid.Row="0" 
            MinWidth="100" 
            HorizontalAlignment="Center" 
            Margin="0,35,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Text="{Binding Name, Mode=OneWayToSource}"/>
        <WrapPanel 
            Grid.Row="1"
            HorizontalAlignment="Right">
            <Button
                IsDefault="True" 
                MinWidth="60" 
                Margin="0,0,10,0"
                Click="Button_Click">
                OK
            </Button>
        </WrapPanel>
    </Grid>
</Window>
